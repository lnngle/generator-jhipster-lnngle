<div class="modal-header">
  <div class="modal-title">{{ 'global.action.view' | i18n }}</div>
</div>
<nz-spin *ngIf="!i" class="modal-spin"></nz-spin>
<div sv-container *ngIf="i">
<%_
  for (field of fields.filter(field => !field.hidden)) {
    const fieldName = field.fieldName;
    const fieldType = field.fieldType;
_%> 
<sv label="{{ '<%= entityTranslationKey %>.form.<%= fieldName %>' | i18n }}">{{ i.<%= fieldName %> }}</sv>
<%_ } _%> 
</div>
<div class="modal-footer">
  <button nz-button type="button" (click)="close()">{{ 'global.action.close' | i18n }}</button>
</div>
